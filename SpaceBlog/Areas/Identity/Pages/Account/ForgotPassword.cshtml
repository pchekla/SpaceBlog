@page
@model SpaceBlog.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Восстановление пароля";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-9">
            <div class="card shadow-lg border-0">
                <!-- Заголовок с градиентом -->
                <div class="card-header text-center text-white py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 0.5rem 0.5rem 0 0;">
                    <h2 class="mb-0">
                        <i class="fas fa-key me-2"></i>Восстановление пароля
                    </h2>
                    <p class="mb-0 mt-2 opacity-75">Введите email для восстановления доступа</p>
                </div>

                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Email -->
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-muted">
                                <i class="fas fa-envelope me-1"></i>E-mail
                            </label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <!-- Кнопка отправки -->
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-lg text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                                <i class="fas fa-paper-plane me-2"></i>Отправить ссылку для восстановления
                            </button>
                        </div>
                        
                        <!-- Назад к входу -->
                        <div class="text-center">
                            <a asp-page="./Login" class="text-decoration-none" style="color: #667eea;">
                                <i class="fas fa-arrow-left me-1"></i>Вернуться ко входу
                            </a>
                        </div>
                    </form>
                </div>

                <!-- Футер карточки -->
                <div class="card-footer bg-light text-center py-3">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        В демонстрационной версии восстановление пароля недоступно
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        transform: scale(.85) translateY(-0.5rem) translateX(0.15rem);
        color: #667eea !important;
    }
    
    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.15);
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(102, 126, 234, 0.3) !important;
        transition: all 0.3s ease;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}