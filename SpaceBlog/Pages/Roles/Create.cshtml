@page
@model SpaceBlog.Pages.Roles.CreateModel
@{
    ViewData["Title"] = "Добавление роли";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-lg border-0">
                <!-- Заголовок с градиентом -->
                <div class="card-header text-center text-white py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 0.5rem 0.5rem 0 0;">
                    <h2 class="mb-0">
                        <i class="fas fa-user-shield me-2"></i>Добавление роли
                    </h2>
                    <p class="mb-0 mt-2 opacity-75">Создайте новую роль пользователя</p>
                </div>

                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Название -->
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Name" class="form-control" autocomplete="off" aria-required="true" placeholder="Введите название роли" />
                            <label asp-for="Input.Name" class="text-muted">
                                <i class="fas fa-user-shield me-1"></i>Название
                            </label>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        
                        <!-- Описание -->
                        <div class="form-floating mb-4">
                            <textarea asp-for="Input.Description" class="form-control" style="height: 120px;" autocomplete="off" aria-required="true" placeholder="Введите описание роли"></textarea>
                            <label asp-for="Input.Description" class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>Описание
                            </label>
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                        </div>
                        
                        <!-- Кнопка добавления -->
                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-lg text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                                <i class="fas fa-plus me-2"></i>Добавить
                            </button>
                        </div>
                        
                        <!-- Ссылка на список -->
                        <div class="text-center">
                            <a asp-page="./Index" class="text-decoration-none fw-semibold" style="color: #667eea;">
                                <i class="fas fa-list me-1"></i>Перейти к списку всех ролей
                            </a>
                        </div>
                    </form>
                </div>

                <!-- Футер карточки -->
                <div class="card-footer text-center py-3" style="background-color: #f8f9fa; border-radius: 0 0 0.5rem 0.5rem;">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Роли определяют права доступа пользователей в системе
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        /* Custom CSS for create role page */
        .card {
            transition: all 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-2px);
        }
        
        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label,
        .form-floating > textarea:focus ~ label,
        .form-floating > textarea:not(:placeholder-shown) ~ label {
            color: #667eea !important;
        }
        
        .form-floating > .form-control:focus,
        .form-floating > textarea:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }
        
        @@media (max-width: 576px) {
            .container {
                padding: 0.5rem;
            }
            
            .card-body {
                padding: 1rem;
            }
            
            .card-header h2 {
                font-size: 1.5rem;
            }
        }
    </style>
}