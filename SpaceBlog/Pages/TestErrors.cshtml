@page "/TestErrors"
@model SpaceBlog.Pages.TestErrorsModel
@{
    ViewData["Title"] = "Тестирование ошибок";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-bug me-2"></i>Тестирование страниц ошибок</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted">Используйте эти ссылки для тестирования различных страниц ошибок:</p>
                    
                    <div class="d-grid gap-2">
                        <a href="/Error/403" class="btn btn-outline-warning">
                            <i class="fas fa-shield-alt me-2"></i>403 - Доступ запрещен
                        </a>
                        <a href="/Error/404" class="btn btn-outline-info">
                            <i class="fas fa-search me-2"></i>404 - Страница не найдена
                        </a>
                        <a href="/Error/500" class="btn btn-outline-danger">
                            <i class="fas fa-server me-2"></i>500 - Внутренняя ошибка сервера
                        </a>
                        <a href="/NonExistentPage" class="btn btn-outline-secondary">
                            <i class="fas fa-question me-2"></i>Тест реальной 404 ошибки
                        </a>
                        <form method="post" class="mt-2">
                            <button type="submit" name="errorType" value="403" class="btn btn-outline-warning w-100">
                                <i class="fas fa-ban me-2"></i>Имитировать 403 через сервер
                            </button>
                        </form>
                        <form method="post" class="mt-2">
                            <button type="submit" name="errorType" value="500" class="btn btn-outline-danger w-100">
                                <i class="fas fa-exclamation-triangle me-2"></i>Имитировать 500 через сервер
                            </button>
                        </form>
                        <form method="post" class="mt-2">
                            <button type="submit" name="errorType" value="400" class="btn btn-outline-warning w-100">
                                <i class="fas fa-exclamation-circle me-2"></i>Имитировать 400 через сервер
                            </button>
                        </form>
                        <form method="post" class="mt-2">
                            <button type="submit" name="errorType" value="401" class="btn btn-outline-info w-100">
                                <i class="fas fa-user-lock me-2"></i>Имитировать 401 через сервер
                            </button>
                        </form>
                        
                        <hr class="my-3">
                        <h6 class="text-muted">Тестирование глобального обработчика исключений:</h6>
                        
                        <form method="post" class="mt-2">
                            <button type="submit" name="exceptionType" value="ArgumentNull" class="btn btn-outline-dark w-100">
                                <i class="fas fa-bug me-2"></i>ArgumentNullException
                            </button>
                        </form>
                        <form method="post" class="mt-2">
                            <button type="submit" name="exceptionType" value="Unauthorized" class="btn btn-outline-dark w-100">
                                <i class="fas fa-user-times me-2"></i>UnauthorizedAccessException
                            </button>
                        </form>
                        <form method="post" class="mt-2">
                            <button type="submit" name="exceptionType" value="NotImplemented" class="btn btn-outline-dark w-100">
                                <i class="fas fa-code me-2"></i>NotImplementedException
                            </button>
                        </form>
                        <form method="post" class="mt-2">
                            <button type="submit" name="exceptionType" value="General" class="btn btn-outline-dark w-100">
                                <i class="fas fa-exclamation me-2"></i>Общее исключение
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>